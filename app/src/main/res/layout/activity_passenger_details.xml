<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/form_background">

    <!-- Top Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/united_blue">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="@dimen/icon_size_medium"
                android:layout_height="@dimen/icon_size_medium"
                android:layout_marginStart="@dimen/form_padding"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:contentDescription="Back"
                android:tint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_passenger_details_title"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_subtitle"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/form_padding">

            <!-- Passenger Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/form_section_spacing"
                app:cardElevation="@dimen/card_elevation"
                app:cardCornerRadius="@dimen/card_corner_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/form_padding">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_passenger_info"
                        android:textSize="@dimen/text_size_subtitle"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="@dimen/form_field_spacing" />

                    <ImageView
                        android:id="@+id/img_profile_large"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:scaleType="centerCrop"
                        android:layout_marginBottom="@dimen/form_field_spacing"
                        android:contentDescription="@string/label_profile_image" />

                    <TextView
                        android:id="@+id/tv_detail_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textSize="@dimen/text_size_title"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_detail_membership"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Business Class"
                        android:textSize="@dimen/text_size_body"
                        android:textColor="@color/white"
                        android:background="@color/united_blue"
                        android:padding="8dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/form_field_spacing" />

                    <TextView
                        android:id="@+id/tv_detail_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email: john@example.com"
                        android:textSize="@dimen/text_size_body"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_detail_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phone: +1234567890"
                        android:textSize="@dimen/text_size_body"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_detail_dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DOB: 1990-01-01"
                        android:textSize="@dimen/text_size_body"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Flight Bookings Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_flight_bookings"
                android:textSize="@dimen/text_size_subtitle"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="@dimen/form_field_spacing" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_bookings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <TextView
                android:id="@+id/tv_no_bookings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/msg_no_bookings"
                android:textSize="@dimen/text_size_body"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:padding="@dimen/form_section_spacing"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_book_flight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/form_padding"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="@string/btn_book_flight"
        app:backgroundTint="@color/united_blue"
        app:tint="@color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
