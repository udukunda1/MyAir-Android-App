<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    app:cardElevation="@dimen/card_elevation"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/card_padding">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="@dimen/profile_image_thumbnail"
            android:layout_height="@dimen/profile_image_thumbnail"
            android:src="@android:drawable/ic_menu_gallery"
            android:scaleType="centerCrop"
            android:contentDescription="@string/label_profile_image" />

        <!-- Passenger Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="@dimen/text_size_body"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="john@example.com"
                android:textSize="@dimen/text_size_caption"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tv_membership"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business Class"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/white"
                android:background="@color/united_blue"
                android:padding="4dp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Action Icons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/btn_edit"
                android:layout_width="@dimen/icon_size_small"
                android:layout_height="@dimen/icon_size_small"
                android:src="@android:drawable/ic_menu_edit"
                android:contentDescription="@string/btn_edit"
                android:tint="@color/united_blue" />

            <ImageView
                android:id="@+id/btn_delete"
                android:layout_width="@dimen/icon_size_small"
                android:layout_height="@dimen/icon_size_small"
                android:layout_marginTop="8dp"
                android:src="@android:drawable/ic_menu_delete"
                android:contentDescription="@string/btn_delete"
                android:tint="@color/error_red" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
